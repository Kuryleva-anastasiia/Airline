@model Airline.Models.Постоянный_клиент

@{
	ViewBag.Title = "Добавление постоянного клиента";
}
@Styles.Render("~/Content/Style.css")

<h2 class="title">Добавление постоянного клиента</h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.id_клиента, "id_клиента", htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("id_клиента", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.id_клиента, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Премиальные_очки, htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Премиальные_очки, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Премиальные_очки, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Количество_км, htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Количество_км, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Количество_км, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-10">
				<input type="submit" value="Create" class="btn form-btn" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Вернуться", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
