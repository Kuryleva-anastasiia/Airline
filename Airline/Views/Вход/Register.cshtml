@model Airline.Models.Вход


@{
	ViewBag.Title = "Регистрация";
}
@Styles.Render("~/Content/Style.css")



<h2 class="title">Регистрация</h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.login, "Логин", htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.login, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.password, "Пароль", htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Пользователи.Фамилия, "Фамилия", htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Пользователи.Фамилия, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Пользователи.Фамилия, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Пользователи.Имя, "Имя", htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Пользователи.Имя, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Пользователи.Имя, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Пользователи.Отчество, "Отчество", htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Пользователи.Отчество, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Пользователи.Отчество, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-10">
				<button type="submit" class="btn form-btn">Зарегистрироваться</button>
				<a class="form-link" href="~/Вход/Login">Войти</a>
			</div>
		</div>
	</div>
}


@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}