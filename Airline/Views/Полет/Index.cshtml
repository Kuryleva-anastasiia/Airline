@model IEnumerable<Airline.Models.Полет>

@{
	ViewBag.Title = "Полеты";
}

@Styles.Render("~/Content/Style.css")



@section header {
	<ul class="nav-list">
		<li class="nav-list__item">@Html.ActionLink("Пользователи", "Index", "Пользователи")</li>
		<li class="nav-list__item">@Html.ActionLink("Постоянные клиенты", "Index", "Постоянный_клиент")</li>
		<li class="nav-list__item">@Html.ActionLink("Вход", "index", "Вход")</li>
		<li class="nav-list__item">@Html.ActionLink("Заявки", "index", "Заявка")</li>
		<li class="nav-list__item">@Html.ActionLink("Рейсы", "index", "Рейс")</li>
		<li class="nav-list__item">@Html.ActionLink("Полеты", "index", "Полет")</li>
	</ul>
}

<h2 class="title">Полеты</h2>

<p>
	@Html.ActionLink("Создать новый полет", "Create")
</p>
<table class="table table-striped">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Дата)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Места_эконом)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Стоимость_эконом)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Места_vip)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Стоимость_vip)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Рейс.Пункт_вылета)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Рейс.Пункт_назначения)
		</th>
		<th></th>
		<th class="last-column"></th>
	</tr>

	@foreach (var item in Model)
	{
<tr>
	<td>
		@Html.DisplayFor(modelItem => item.Дата)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Места_эконом)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Стоимость_эконом)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Места_vip)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Стоимость_vip)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Рейс.Пункт_вылета)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Рейс.Пункт_назначения)
	</td>
	<td class="last-column">
		<button class="btn form-btn">@Html.ActionLink("Забронировать билет", "CreateTicket", new { id = item.id })</button>
	</td>
	<td class="last-column">
		@Html.ActionLink("Редактировать", "Edit", new { id = item.id }) |
		@Html.ActionLink("Детали", "Details", new { id = item.id }) |
		@Html.ActionLink("Удалить", "Delete", new { id = item.id })
	</td>
</tr>
	}

</table>
