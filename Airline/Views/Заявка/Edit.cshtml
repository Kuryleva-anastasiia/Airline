@model Airline.Models.Заявка

@{
	ViewBag.Title = "Редактирование заявки";
}
@Styles.Render("~/Content/Style.css")

<h2 class="title">Редактирование заявки</h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.id)

		<div class="form-group">
			@Html.LabelFor(model => model.id_клиента, "Клиент", htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10 m-t-10">
				@Html.DisplayFor(model => model.Пользователи.Фамилия)
				@Html.DisplayFor(model => model.Пользователи.Имя)
				@Html.DisplayFor(model => model.Пользователи.Отчество)
			</div>
		</div>

		@{ List<string> l = new List<string>();
			l.Add("эконом");
			l.Add("vip");
			SelectList list = new SelectList(l);}

		<div class="form-group">
			@Html.LabelFor(model => model.Класс, htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10 m-t-10">
				@Html.DropDownList("Класс", list, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.Класс, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Количество_мест, htmlAttributes: new { @class = "form-label col-md-2" })
			<div class="col-md-10 m-t-10">
				@Html.EditorFor(model => model.Количество_мест, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Количество_мест, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group sum">
			<span class="form-label">@Html.LabelFor(model => model.Сумма, htmlAttributes: new { @class = "" })</span>
			<span  class="sum-label">@Html.DisplayFor(model => model.Сумма)</span>
			
		</div>


		<div class="form-group">
			<div class="col-md-10">
				<input type="submit" value="Save" class="btn form-btn" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Вернуться", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
